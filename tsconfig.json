{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDirs": ["src", "bin"]
  },
  "include": ["src/**/*", "bin/**/*"],
  "exclude": ["node_modules"]
}
