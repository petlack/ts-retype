{
    "compilerOptions": {
        "target": "esnext",
        "strict": true,
        "module": "es2020",
        "lib": [
            "es2020",
            "dom"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "outDir": "dist",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
