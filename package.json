{
  "name": "ts-retype",
  "version": "0.2.6-rc",
  "publishConfig": {
    "access": "public"
  },
  "description": "Discover duplicate TypeScript types in your codebase.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/petlack/ts-retype"
  },
  "author": "petlack",
  "homepage": "https://petlack.github.io/ts-retype/",
  "bugs": "https://github.com/petlack/ts-retype/issues",
  "scripts": {
    "build": "npm -w retype -w uikit -w scripts install && npm -w retype run build && npm -w uikit run build && npm -w scripts run build",
    "build:all": "npm run build && npm run docs:build && npm run scripts:build && npm run example:build",
    "bump": "node config/bump.cjs",
    "clean": "npm -w retype -w uikit -w scripts run clean",
    "dev:make": "npm -w scripts run dev src/make.ts --",
    "dev:script": "npm -w scripts run dev",
    "docs:build": "cd docs && npm run build",
    "docs:dev": "cd docs && npm run dev",
    "e2e": "playwright test --trace on",
    "e2e:report": "playwright show-report",
    "example:build": "cd example && npm run build",
    "example:report": "cd example && npm run report",
    "format": "prettier --write './**/*.{js,ts,md,json}' --config ./.prettierrc",
    "format:check": "prettier --check .",
    "lint": "npm run lint:docs && npm --no-bail run lint:json && npm run lint:package && npm run lint:js",
    "lint:docs": "prettier --write **/*.md",
    "lint:js": "eslint --cache src config tests vis/src --ext .js,.ts,.mjs,.cjs",
    "lint:json": "prettier --write **/tsconfig.json",
    "lint:package": "prettier --write **/package.json",
    "make": "npm -w scripts run make --",
    "prepare": "husky install",
    "publish": "npm -w retype run publish",
    "retype": "npm -w retype run bin -- -c . -j vis/data.json",
    "scripts:build": "npm -w scripts run build",
    "scripts:dev": "npm -w scripts run dev",
    "security": "npm audit --audit-level=high",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:fast": "NODE_OPTIONS=--experimental-vm-modules jest --coverage -c jest.fast.config.ts",
    "test:watchAll": "NODE_OPTIONS=--experimental-vm-modules jest --watchAll",
    "vis:build": "cd vis && npm run build",
    "vis:clean": "cd vis && npm run clean",
    "vis:dev": "cd vis && npm run dev"
  },
  "keywords": [
    "typescript",
    "static-analysis",
    "nodejs",
    "cli"
  ],
  "dependencies": {
    "ramda": "^0.28.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.33.0",
    "@types/jest": "^29.4.0",
    "@types/ramda": "^0.28.23",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-rollup": "^3.0.0",
    "husky": "^8.0.0",
    "jest": "^29.4.3",
    "lint-staged": "^11.0.1",
    "magic-string": "^0.30.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "**/(package|tsconfig(.*)?).json": [
      "prettier --write"
    ],
    "((README)|(**/(README))).md": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "docs",
    "docs-static",
    "example",
    "retype",
    "scripts",
    "uikit",
    "vis"
  ]
}
