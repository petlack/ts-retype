{
  "name": "@ts-retype/clikit",
  "version": "0.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/petlack/ts-retype"
  },
  "author": "petlack",
  "homepage": "https://petlack.github.io/ts-retype/",
  "bin": "dist/cli.js",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./app": {
      "import": {
        "types": "./dist/app/index.d.ts",
        "default": "./dist/app/index.js"
      }
    },
    "./components": {
      "import": {
        "types": "./dist/components/index.d.ts",
        "default": "./dist/components/index.js"
      }
    }
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "debug": "DEV=true clikit",
    "dev": "nodemon -I --exec node dev/cli.js",
    "dev:any": "nodemon -I --exec node --",
    "prebuild": "npm run clean",
    "start": "clikit",
    "start:any": "node --",
    "test": "prettier --check . && xo && ava",
    "watch": "rollup -cw"
  },
  "files": [
    "dist/*"
  ],
  "dependencies": {
    "ink": "^4.1.0",
    "meow": "^11.0.0",
    "minisearch": "^6.0.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^3.0.1",
    "@types/figlet": "^1.5.6",
    "@types/react": "^18.0.32",
    "@vdemedes/prettier-config": "^2.0.1",
    "ava": "^5.2.0",
    "chalk": "^5.2.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "figlet": "^1.6.0",
    "ink-ascii": "^0.0.4",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^2.0.0",
    "ink-testing-library": "^3.0.0",
    "prettier": "^2.8.7",
    "react-devtools": "^4.27.6",
    "react-devtools-core": "^4.27.6",
    "rollup-plugin-esbuild": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "xo": "^0.53.1"
  },
  "types": "./dist/index.d.ts",
  "ava": {
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "xo": {
    "extends": "xo-react",
    "prettier": true,
    "rules": {
      "react/prop-types": "off"
    }
  }
}
