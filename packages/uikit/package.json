{
    "name": "@ts-retype/uikit",
    "version": "1.0.0",
    "description": "",
    "author": "",
    "license": "ISC",
    "type": "module",
    "main": "dist/index.js",
    "exports": {
        ".": "./dist/index.js",
        "./clsx": "./dist/clsx.js",
        "./code": "./dist/code.js",
        "./hooks": "./dist/hooks.js",
        "./icons": "./dist/icons.js",
        "./tree": "./dist/tree.js",
        "./dist/index.css": "./dist/index.css"
    },
    "scripts": {
        "build": "tsup --onSuccess \"tsc --emitDeclarationOnly --declaration\"",
        "build:css": "npx tailwindcss -c tailwind.config.cjs -i src/index.css -o dist/styles.css",
        "build:watch": "tsup --watch --onSuccess \"npm run start\"",
        "clean": "rm -rf ./dist",
        "start": "node dist/index.js",
        "stats": "rollup -c rollup.config.mjs",
        "test": "vitest run --coverage",
        "test:watch": "vitest watch"
    },
    "dependencies": {
        "@ts-retype/syhi": "workspace:*",
        "@ts-retype/utils": "workspace:*",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.64",
        "@types/react-dom": "^18.2.21",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@vitejs/plugin-react": "^4.2.1",
        "@vitest/coverage-v8": "^1.3.1",
        "autoprefixer": "^10.4.18",
        "eslint": "^8.57.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "tsup": "^8.0.2",
        "typescript": "^5.4.2",
        "vitest": "^1.3.1"
    },
    "nx": {
        "targets": {
            "build": {
                "dependsOn": [
                    "@ts-retype/theme:bin",
                    "@ts-retype/search:build",
                    "@ts-retype/utils:build"
                ]
            }
        }
    }
}
