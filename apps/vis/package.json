{
    "name": "@ts-retype/vis",
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "copy-assets-to-bin": "mkdir -p ../bin/dist/vis && cp -R ../vis/dist/* ../bin/dist/vis/ && date > foo.txt",
        "clean": "rm -rf ./dist",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview"
    },
    "dependencies": {
        "@ts-retype/uikit": "workspace:*",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "@vitejs/plugin-react": "^4.2.1",
        "eslint": "^8.55.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "typescript": "^5.2.2",
        "vite": "^5.0.8"
    },
    "nx": {
        "targets": {
            "copy-assets-to-bin": {
                "outputs": [
                    "{workspaceRoot}/dist/*.html",
                    "{workspaceRoot}/dist/assets/*.{js,css}"
                ],
                "dependsOn": [
                    "build"
                ]
            }
        }
    }
}
