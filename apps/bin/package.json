{
    "name": "@ts-retype/bin",
    "sideEffects": false,
    "version": "1.0.0",
    "description": "",
    "type": "module",
    "main": "dist/index.cjs",
    "bin": {
        "ts-retype": "dist/ts-retype.cjs"
    },
    "scripts": {
        "bin": "./dist/ts-retype.cjs",
        "build": "tsup",
        "build:watch": "tsup --watch --onSuccess \"npm run start\"",
        "copy-assets-from-vis": "mkdir -p ./dist/vis && cp -R ../vis/dist/* ./dist/vis/ && cp ./package.json ./dist/",
        "clean": "rm -rf ./dist",
        "dev": "node dist/index.cjs --help",
        "start": "node dist/index.cjs --help",
        "test": "vitest run --coverage"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@ts-retype/search": "workspace:^",
        "@ts-retype/utils": "workspace:^",
        "commander": "^11.1.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.6",
        "@vitest/coverage-v8": "^1.2.2",
        "tsup": "^8.0.1",
        "vitest": "^1.2.2"
    },
    "nx": {
        "targets": {
            "copy-assets-from-vis": {
                "dependsOn": [
                    {
                        "projects": "@ts-retype/vis",
                        "target": "build"
                    }
                ]
            },
            "build": {
                "dependsOn": [
                    {
                        "target": "copy-assets-from-vis"
                    }
                ]
            },
            "test": {
                "dependsOn": [
                    {
                        "target": "build"
                    }
                ]
            }
        }
    }
}
