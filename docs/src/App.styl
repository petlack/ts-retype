@import "./utils.styl"
@import "./vars.styl"

*
  margin: 0;
  padding: 0;
  box-sizing: border-box;

:root
  font-size: 24px;

body
  background-color: clrBg;
  color: clrFg;
  min-height: 100vh;
  font-family: fontRegular;

main
  flexColumn(gapLarge)
  justify-content: flex-start;
  align-items: center;
  header
    width: 100vw;
    flexColumn(gapLarge);
    justify-content: center;
    align-items: center;
    background-color: clrHeaderBg;
    padding: gapXXLarge;
    color: clrHeaderFg;
    boxShadowStrong()

    .logo
      flexRow(1ch)
      align-items: flex-end;
      span:nth-of-type(1)
        font-size: 2.5rem;
        font-weight: 400;
        padding: 1.5rem 0.8rem 0rem 1.5rem;
        border-radius: 10%;
        background-color: darken(clrHeaderBg, 20);
        boxShadowMedium()
      span:nth-of-type(2)
        font-size: 2.5rem;

    .links
      flexRow(gapMedium);
      a
        padding: gapSmall gapMedium;
        color: clrHeaderFg;
        text-decoration: none;
        background-color: lighten(clrHeaderBg, 10);
        border-radius: borderRadiusMedium;
        transition: background-color transRegular;
        &:hover
          background-color: lighten(clrHeaderBg, 15);
  section
    flexColumn(gapMedium)
    max-width: sectionMaxWidth;
    min-width: sectionMinWidth;
    width: 80vw;
    ul
      flexColumn()
      flex: 1;
    li
      display: flex;
      color: clrCardFg;
      background-color: clrCardBg;
      transition: background-color transRegular;
      &:hover 
        background-color: clrCardBg;
      a
        flex: 1;
        text-decoration: none;
        color: clrCardFg;
        padding: gapMedium;
