darkSxTheme() {
  --clr-cp-rosewater: #f5e0dc;
  --clr-cp-flamingo: #f2cdcd;
  --clr-cp-pink: #f5c2e7;
  --clr-cp-mauve: #cba6f7;
  --clr-cp-red: #f38ba8;
  --clr-cp-maroon: #eba0ac;
  --clr-cp-peach: #fab387;
