@import "./utils.styl"
@import "./vars.styl"

$bgMain = var(--clr-bgMain);
$fgText = var(--clr-fgText);
$bgCode = var(--clr-bgCode);

lightTheme()
  --clr-bgMain: $bgColorMainLight;
  --clr-fgText: $textLight;
  --clr-bgCode: $codeBgMainLight;
  --clr-bgBorder: $bgBorderLight;

darkTheme()
  --clr-bgMain: $bgColorMainDark;
  --clr-fgText: $textDark;
  --clr-bgCode: $codeBgMainDark;
  --clr-bgBorder: $bgBorderDark;

*
  margin: 0;
  padding: 0;
  box-sizing: border-box;

:root
  font-size: 16px;

body
  // background-color: clrBg;
  // color: clrFg;
  min-height: 100vh;
  font-family: $fontRegular;

main
  &.light
    lightTheme();
  &.dark
    darkTheme();
  flexColumn(gapLarge)
  justify-content: flex-start;
  align-items: center;
  background-color: $bgMain;
  color: $fgText;
  .window
    background-color: $bgCode;
  header
    width: 100vw;
    flexColumn(gapLarge);
    justify-content: center;
    align-items: center;
    background-color: clrHeaderBg;
    padding: gapXXLarge;
    color: clrHeaderFg;
    boxShadowStrong()

    .links
      flexRow(gapMedium);
      a
        padding: gapSmall gapMedium;
        color: clrHeaderFg;
        text-decoration: none;
        background-color: lighten(clrHeaderBg, 10);
        border-radius: borderRadiusMedium;
        transition: background-color transRegular;
        svg
          margin-right: gapMedium;
          width: 18px;
          height: 18px;
        &:hover
          background-color: lighten(clrHeaderBg, 15);
  section
    flexColumn(gapLarge)
    max-width: sectionMaxWidth;
    min-width: sectionMinWidth;
    padding: gapMedium;
    width: 80vw;
    font-size: 16px;
    @media screen and (max-width: $breakSnippetsColumn)
      width: 100vw;
      padding: 0 1rem;
      max-width: unset;
    &.bleed
      max-width: 100vw;
      width: 100vw;
      margin: 0;
      padding: 0;
    h2 
      font-family: $fontRegular;
      font-size: 2rem;

  ul.links
    flexColumn()
    flex: 1;
  li
    display: flex;
    transition: background-color transRegular;
    a
      flex: 1;
      text-decoration: underline;
      color: $fgText;
      padding: gapMedium;
    &:hover a
      color: clrHeaderBg;
