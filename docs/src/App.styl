@import "./utils.styl"
@import "./vars.styl"

*
  margin: 0;
  padding: 0;
  box-sizing: border-box;

:root
  font-size: 24px;

body
  background-color: clrBg;
  color: clrFg;
  min-height: 100vh;
  font-family: fontRegular;

main
  flexColumn(gapLarge)
  justify-content: flex-start;
  align-items: center;
  header
    width: 100vw;
    flexColumn(gapLarge);
    justify-content: center;
    align-items: center;
    background-color: clrHeaderBg;
    padding: gapXXLarge;
    color: clrHeaderFg;
    boxShadowStrong()

    .links
      flexRow(gapMedium);
      a
        padding: gapSmall gapMedium;
        color: clrHeaderFg;
        text-decoration: none;
        background-color: lighten(clrHeaderBg, 10);
        border-radius: borderRadiusMedium;
        transition: background-color transRegular;
        svg
          margin-right: gapMedium;
          width: 18px;
          height: 18px;
        &:hover
          background-color: lighten(clrHeaderBg, 15);
  section
    flexColumn(gapLarge)
    max-width: sectionMaxWidth;
    min-width: sectionMinWidth;
    padding: gapMedium;
    width: 80vw;
    &.bleed
      max-width: 100vw;
      width: 100vw;
      margin: 0;
      padding: 0;
    h2 
      font-family: fontTitle;
      font-size: 2rem;
    ul
      flexColumn()
      flex: 1;
    li
      display: flex;
      color: clrFg;
      transition: background-color transRegular;
      &:hover a
        color: clrHeaderBg;
      a
        flex: 1;
        text-decoration: underline;
        color: clrFg;
        padding: gapMedium;
