@import "../vars.styl"

.token
    font-weight: 300;
    &.bold
      font-weight: bolder;

.dark
  .token
    color: $white;
    & > .token
      color: inherit;
    &.bash
      color: $white;
    &.builtin
      color: $lightPurple;
    &.class-name
      color: orange;
    &.comment
      color: lightgray;
    &.function
      color: $lightPurple;
    &.keyword
      color: $lightOrange;
    &.number
      color: $lightBlue;
    &.operator
      color: green;
    &.property
      color: $white;
    &.punctuation
      color: $grayLight;
    &.string
      color: $lightBlue;

.light
  .token
    color: $blue;
    & > .token
      color: inherit;
    &.bash
      color: $black;
    &.builtin
      color: $purple;
    &.class-name
      color: orange;
    &.comment
      color: lightgray;
    &.function
      color: $purple;
    &.keyword
      color: $orange;
    &.number
      color: $blueDark;
    &.operator
      color: green;
    &.property
      color: $blue;
    &.punctuation
      color: $black;
    &.string
      color: $blueDark;