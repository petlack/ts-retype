@import "../vars.styl"

.token
    font-weight: 300;

.dark
  .token
    color: $white;
  .keyword
    color: $lightOrange;
  .class-name
    color: orange;
  .operator
    color: green;
  .punctuation
    color: $grayLight;
  .builtin
    color: $lightPurple;
  .string
    color: $lightBlue;
  .number
    color: $lightBlue;
  .comment
    color: lightgray;
  .function
    color: $lightPurple;
  .property
    color: $white;

.light
  .token
    color: $blue;
  .keyword
    color: $orange;
  .class-name
    color: orange;
  .operator
    color: green;
  .punctuation
    color: $black;
  .builtin
    color: $purple;
  .string
    color: $darkBlue;
  .number
    color: $darkBlue;
  .comment
    color: lightgray;
  .function
    color: $purple;
  .property
    color: $blue;