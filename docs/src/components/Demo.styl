@import "../utils.styl"
@import "../vars.styl"

$menuInactiveFg = var(--clr-menuInactiveFg);
$menuActiveFg = var(--clr-menuActiveFg);
$menuHoverFg = var(--clr-menuHoverFg);
$bgColor = var(--clr-bgColor);
$fgColor = var(--clr-fgColor);
$boxShadow = var(--clr-boxShadow);
$codeKeyFg = var(--clr-codeKeyFg);
$codeValueFg = var(--clr-codeValueFg);

lightTheme()
  --clr-codeKeyFg: $blueDark;
  --clr-codeValueFg: $green;
  --clr-menuInactiveFg: gray;
  --clr-menuActiveFg: black;
  --clr-menuHoverFg: black;
  --clr-bgColor: #e2e6e7;
  --clr-fgColor: black;
  --clr-boxShadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
  --clr-card-bg: white;
  --clr-code-bg: #e8eff1;
  --clr-code-fg: black;
  --clr-code-key: $codeKeyFg;
  --clr-code-value: $codeValueFg;
  --clr-card-title-fg: #aab5b9;
  --clr-bgaa-400: #bccfd5;
  --clr-card-badge-bg: $bgColor; 

darkTheme()
  --clr-codeKeyFg: $red;
  --clr-codeValueFg: $yellow;
  --clr-menuInactiveFg: lightgray;
  --clr-menuActiveFg: white;
  --clr-menuHoverFg: white;
  --clr-bgColor: #1d2e32;
  --clr-fgColor: white;
  --clr-boxShadow: rgb(0 10 23 / 25%) 0px 13px 27px -5px, rgb(0 0 0 / 30%) 0px 8px 16px -8px;
  --clr-fg: #dbdbdb;
  --clr-bgaa-400: #213237;
  --clr-code-key: $codeKeyFg;
  --clr-code-value: $codeValueFg;
  --clr-card-bg: #151e21;
  --clr-card-fg: #ffffff;
  --clr-code-bg: #101517;
  --clr-code-fg: #ffffff;
  --clr-card-badge-bg: #1d2e32;
  --clr-card-title-fg: #585858;

.demo-container
  display: flex;
  position: relative;
  min-height: 100vh;
  align-items: stretch;
  justify-content: center;
  background-color: $bgColor;
  color: $fgColor;
  box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
  .strip
    position: absolute;
    inset: 0;
    height: 4px;
    background-color: $accent;
  &.light
    lightTheme();
  &.dark
    darkTheme();
  .demo
    // align-items: center;
    font-size: 14px;
    display: grid;
    // column-gap: 4rem;
    row-gap: 2rem;
    padding: 2rem;
    grid-template-areas: "types header" "snippets snippets" "example code";
    grid-template-columns: min-content 1fr;
    grid-template-rows: min-content 1fr 1fr;

    &-header
      grid-area: header;
      color: white;
      display: flex;
      justify-content: flex-end;
      justify-self: end;
    .types
      flexRow();
      position: sticky;
      grid-area: types;
      gap: 1.5rem;
      justify-self: start;
      align-self: center;
      // justify-content: end;
      // align-items: center;
      font-size: 1.5em;
      font-weight: 400;
      .type
        color: $menuInactiveFg;
        cursor pointer;
        &.active
          color: $menuActiveFg;
        &:hover
          color: $menuHoverFg;
      .indicator
        position: absolute;
        top: calc(50% + 1rem);
        left: 0;
        height: 2px;
        width: 58px;
        background-color: $accent;
    .description
      grid-area: desc;
      font-size: 1.5em;
      font-weight: 300;
    .snippets
      grid-area: snippets;
      flexRow(2rem);
      // margin-top: 2rem;
      // padding: 2rem;
      justify-content: space-between;
      align-items: center;
    .similarity
      grid-area: example;
      flexColumn(.5em);
      // max-width: 800px;
      // padding: 2rem;
      position: relative;
      top: -0rem;
      margin: 0;
      flex: 1;
      h1
        font-size: 2.3rem;
        width: 20ch;
        font-weight: 500;
        font-family: fontTitle;
        // color: #29474f;
        color: #101010;
        margin-bottom: .5rem;
      p
        width: 50ch;
        font-size: 1.3em;
        font-weight: 400;
        opacity: 0.8;
        line-height: 1.5;
        color: #313131;
      .cluster
        box-shadow: $boxShadow;
      // background-color: yellow;
    .code-install
      grid-area: code;
      align-self: start;
      justify-self: center;
      align-items: flex-start;
      flexColumn(1rem);
      margin-top: 1rem;
      // padding: 0 0rem 2rem 2rem;
      // position: relative;
      // left: -8ch;
      .bash
        // padding: 1rem 2rem;
        color: white;
        font-size: 1rem;
        font-family: fontMono;
        font-weight: 600;
        // background-color: #414243;
        box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px
        // border-radius: 12px;
      .links
        flexColumn(.5rem);
        .link
          flexRow(.5rem);
          align-items: center;
          justify-content: start;
          gap: 1ch;
          border: none;
          outline: none;
          border-radius: 8px;
          padding: .5rem 1rem;
          font-family: fontRegular;
          font-size: .75rem;
          font-weight: 400;
          cursor: pointer;
          transition: background-color 150ms ease-in;
          &-primary
            background-color: $accent;
            color: white;
            &:hover
              background-color: lighten($accent, 5);
          &-secondary
            background-color: transparent;
            color: #313131;
            border: 1px solid currentColor;
            &:hover
              background-color: #f3f3f3;


    