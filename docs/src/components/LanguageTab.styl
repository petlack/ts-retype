.tab
  position: relative;
  color: darken(white, 60);
  padding: .5rem .5rem;
  cursor: pointer;
  &:before
    content: '';
    position: absolute;
    bottom: 4px;
    left: calc((100% - 60%)/2);
    right: calc((100% - 60%)/2);
    height: 8px;
    background-color: var(--clr-border);
    border-radius: 100vw;
    transform: scaleX(0);
    transition: transform 150ms ease-in;
  &:hover
    color: var(--clr-fgText);
  &-active
    &:before
      transform: scaleX(1);
    color: var(--clr-fgText);
