indicator()
  position: absolute;
  bottom: .25em;
  left: calc((100% - 80%)/2);
  right: calc((100% - 80%)/2);
  height: .5em;
  background-color: var(--clr-fgMedium);
  // border-radius: 100vw;
  transform: scaleX(0);
  transition: transform 150ms ease-in;

indicator-active()
  transform: scaleX(1);

.tab
  position: relative;
  color: darken(white, 60);
  padding: .5rem .5rem;
  cursor: pointer;
  &-caption
    position: relative;
  &-indicator
    indicator()
  &:hover
    color: var(--clr-fgText);
  &-active
    .tab-indicator
      indicator-active()
    color: var(--clr-fgText);
