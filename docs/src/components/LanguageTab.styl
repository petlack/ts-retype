  &:before
    content: '';
    position: absolute;
    bottom: 4px;
    left: calc((100% - 60%)/2);
    right: calc((100% - 60%)/2);
    height: 8px;
    background-color: var(--clr-bgBorder);
    border-radius: 100vw;
    transform: scaleX(0);
    transition: transform 150ms ease-in;
  &:hover
    color: var(--clr-fgText);
  &-active
    &:before
      transform: scaleX(1);
    color: var(--clr-fgText);
