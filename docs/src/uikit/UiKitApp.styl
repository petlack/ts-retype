@import "../utils.styl"
@import "../vars.styl"

lightTheme()
  --clr-bgMain: $bgMainLight;
  --clr-bgSecondary: $bgSecondaryLight;
  --clr-border: $borderLight;
  --clr-fgText: $textLight;
  --clr-fgTitle: $titleLight;

darkTheme()
  --clr-bgMain: $bgMainDark;
  --clr-bgSecondary: $bgSecondaryDark;
  --clr-border: $borderDark;
  --clr-fgText: $textDark;
  --clr-fgTitle: $titleDark;

*
  margin: 0;
  padding: 0;
  box-sizing: border-box;

:root
  font-size: 16px;

body
  min-height: 100vh;
  font-family: $fontRegular;

main
  &.light
    lightTheme();
  &.dark
    darkTheme();
  --z-always-visible: $zAlwaysVisible;
  --z-overlay: $zOverlay;
  flexColumn()
  min-height: 100vh;
  // justify-content: flex-start;
  // align-items: center;
  background-color: var(--clr-bgMain);
  color: var(--clr-fgText);
  header
    width: 100vw;
    flexColumn($gapLarge);
    justify-content: center;
    align-items: center;
    background-color: var(--clr-bgWindowHeader);
    padding: $gapXXLarge;
    color: var(--clr-fgWindowHeader);
    boxShadowStrong()
  section
    flexColumn($gapLarge)
    max-width: $sectionMaxWidth;
    min-width: $sectionMinWidth;
    padding: $gapMedium;
    width: 80vw;
    font-size: 16px;
    @media screen and (max-width: $breakSnippetsColumn)
      width: 100vw;
      padding: 0 1rem;
      max-width: unset;
    &.bleed
      max-width: 100vw;
      width: 100vw;
      margin: 0;
      padding: 0;
